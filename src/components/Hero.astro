---
import { marked } from 'marked';
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const hero = siteConfig.hero;
---

{
    (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
        <section class='w-full flex flex-col gap-8 mb-16 sm:mb-24'>
            {hero.title && <h1 class='text-3xl leading-tight font-serif font-medium sm:text-5xl sm:leading-tight'>{hero.title}</h1>}
            {hero.image?.src && (
                <div class='grid grid-cols-2 md:grid-cols-3 gap-4 mx-auto sm:grid-cols-1'>
                    <img
                        alt='rafli satya dewanto'
                        class='rounded-full w-[200px] h-[200px] md:w-full md:h-full object-cover md:rounded-lg col-span-2 md:col-span-1 row-span-2 aspect-square object-[center_30%] md:block'
                        src='/rafli.JPG'
                        fetchpriority='high'
                        loading="lazy"
                    />
                    <img
                        alt='me & my friends from neotic'
                        class='hidden md:block w-full h-full object-cover rounded-lg'
                        src='/neotic-1.JPG'
                        style='aspect-ratio: 400 / 300;'
                    />
                    <img
                        alt='me & my friends from neotic'
                        class='hidden md:block w-full h-full object-cover rounded-lg'
                        src='/neotic-2.jpeg'
                        style='aspect-ratio: 400 / 300;'
                    />
                    <img
                        alt='rafli dewanto'
                        class='hidden md:block w-full h-full object-cover rounded-lg col-span-2'
                        src='/person-sitting.jpeg'
                        style='aspect-ratio: 800 / 500;'
                    />
                    <img
                        alt='eraspace'
                        class='hidden md:block w-full h-full object-cover rounded-lg col-span-2'
                        src='/era.jpg'
                        style='aspect-ratio: 400 / 300;'
                    />
                    <img
                        alt='mirror selfie'
                        class='hidden md:block md:h-full w-full h-full sm:w-80 sm:h-56 object-cover rounded-lg object-[center_30%]'
                        src='/mirror-selfie.jpg'
                        style='aspect-ratio: 300 / 400;'
                    />
                </div>
            )}
            {hero.text && <div class='max-w-none prose prose-dante sm:prose-lg' set:html={marked.parse(hero.text)} />}
            {hero.actions && hero.actions.length > 0 && (
                <div class='flex flex-wrap gap-4'>
                    {hero.actions.map((action) => (
                        <Button href={action.href}>{action.text}</Button>
                    ))}
                </div>
            )}
        </section>
    )
}
